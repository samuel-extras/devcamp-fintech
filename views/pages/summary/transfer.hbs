<form id="transfer-summary-form" method="post">
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Mobile Number:</p>
        <p class="col-sm text-sm-right font-weight-500">{{to}}</p>
        <input type="hidden" value="{{to}}" id="mobileNumber">
    </div>
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Type:</p>
        <p class="col-sm text-sm-right font-weight-500">{{ title }}</p>
    </div>
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Amount:</p>
        <p class="col-sm text-sm-right font-weight-500">{{amount}}</p>
        <input type="hidden" value="{{amount}}" id="amount">
    </div>
    <div class="row">
        <p class="col-12 text-muted mb-0">Plan Description:</p>
        <p class="col-12 text-1">
            {{title}} summary of {{amount}} to {{to}} wallet.
        </p>
    </div>

    <div class="bg-light-4 rounded p-3">
        <div class="row">
            <div class="col-sm text-3 font-weight-600">Payment Amount</div>
            <div class="col-sm text-sm-right text-5 font-weight-500">â‚¦{{ amount }}</div>
        </div>
    </div>

    <p class="mt-4 mb-0">
        <button type="submit" id="submitButton" class="btn btn-primary btn-block">Transfer Fund</button>
    </p>
</form>
<script src="/js/page/transferSummary.js"></script>