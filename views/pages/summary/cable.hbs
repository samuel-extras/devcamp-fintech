<form id="cable-summary-form" method="post">
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Smart Card / IUC Number:</p>
        <p class="col-sm text-sm-right font-weight-500">{{number}}</p>
        <input type="hidden" value="{{number}}" id="number">
    </div>
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Operator:</p>
        <p class="col-sm text-sm-right font-weight-500">{{cableTitle}}</p>
    </div>
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Type:</p>
        <p class="col-sm text-sm-right font-weight-500">Cable Tv Subscription</p>
    </div>
    <div class="row">
        <p class="col-sm text-muted mb-0 mb-sm-3">Amount:</p>
        <p class="col-sm text-sm-right font-weight-500">{{amount}}</p>
        <input type="hidden" value="{{amount}}" id="amount">
    </div>
    <div class="row">
        <p class="col-12 text-muted mb-0">Plan Description:</p>
        <p class="col-12 text-1">
            {{title}} summary for {{amount}} {{network}} Cable Tv Subscription at the rate of ₦{{amount}}
        </p>
    </div>

    <div class="bg-light-4 rounded p-3">
        <div class="row">
            <div class="col-sm text-3 font-weight-600">Payment Amount</div>
            <div class="col-sm text-sm-right text-5 font-weight-500">₦{{ amount }}</div>
        </div>
    </div>

    <input type="hidden" value="{{cable}}" id="cable">
    <input type="hidden" value="{{plan}}" id="plan">

    <p class="mt-4 mb-0">
        <button type="submit" id="submitButton" class="btn btn-primary btn-block">Subscribe</button>
    </p>
</form>
<script src="/js/page/cableSummary.js"></script>